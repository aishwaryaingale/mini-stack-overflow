<div class="container">
    <div class="row">
        <h2>{{title}}</h2>
        {{#each answers}}
        <div class="col-2">
            Votes: <span class="badge badge-primary badge-pill">{{this.vote}}</span>
        </div>
        <div class="col-6">{{this.title}}</div>
        <div class="col-4">
            <a class="btn btn-primary btn-lg mr-2" href="edit/{{this.id}}">Edit</a>
            <a class="btn btn-danger btn-lg" href="/questions/{{_id}}?_method=delete">Remove</a>
        </div>
        {{/each}}
        <a class="btn btn-success btn-lg ml-2" href="/questions">Go Back</a>
    </div>
</div>